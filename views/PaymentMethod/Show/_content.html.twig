<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4">
                <label>Nombre</label>
                {{ resource.name }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label>Descripción</label>
                {{ resource.description }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label>Precio</label>
                {{ resource.price }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label>Porcentaje</label>
                {{ resource.percentage }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Habilitado</label>
                {{ (resource.enabled is empty)? 'No' : 'Si' }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label>Empresa</label>
                {{ resource.company.taxName }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label>Vencimientos</label>
                {% for expire in resource.expires %}
                    <div>
                        {{ expire.days }} día/s.<br>
                        Porcentaje: {{ expire.percentage }}
                    </div>
                {% endfor %}
            </div>
        </div>
        <br>
        <div class="cancel-button">
            {% include '/Form/Buttons/_cancel.html.twig' with {'paths': {'cancel': path('GET_' ~ metadata.parameters.route.root ~ '_' ~  metadata.parameters.route.actions.list, configuration.vars.route.parameters|default({}))}} %}
        </div>
    </div>
</div>
