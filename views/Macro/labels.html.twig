{% macro default(text) %}
    <span class="label label-default">{{ text }}</span>
{% endmacro %}

{% macro status(status) %}
    {% import _self as labels %}

    {% if status %}
        {{ labels.enabled() }}
    {% else %}
        {{ labels.disabled() }}
    {% endif %}
{% endmacro %}

{% macro enabled() %}
    <span class="label label-success">
        <i class="fa fa-check"></i>
        Habilitado
    </span>
{% endmacro %}

{% macro disabled() %}
    <span class="label label-danger">
        <i class="fa fa-remove"></i>
        Deshabilitado
    </span>
{% endmacro %}

{% macro yesNo(value) %}
    {% import _self as labels %}

    {% if value %}
        {{ labels.yes() }}
    {% else %}
        {{ labels.no() }}
    {% endif %}
{% endmacro %}

{% macro yes() %}
    <span class="ui basic label">
        <i class="fa fa-check"></i>
        Si
    </span>
{% endmacro %}

{% macro no() %}
    <span class="label label-danger">
        <i class="fa fa-remove"></i>
        No
    </span>
{% endmacro %}
